<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/home_movie.root"
        android:layout_width="120dp"
        android:layout_height="190dp"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginLeft="@dimen/activity_horizontal_padding"
        android:layout_marginStart="@dimen/activity_horizontal_padding"
        android:layout_marginBottom="@dimen/activity_vertical_padding">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/home_movie.poster"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                tools:src="@drawable/background_reel"/>

        <TextView
                android:id="@+id/home_move.title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="13sp"
                tools:text="AndroidTVAndroidTVAndroidTV"/>
    </LinearLayout>
</android.support.v7.widget.CardView>